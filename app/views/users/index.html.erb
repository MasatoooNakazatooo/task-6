<div class = "container">
<div class = "row">

  <div class = "col-xs-3">
<%= render "users/list", user: @user, book: @book %>
  </div>

  <div class = "col-xs-9">
<h1>Users</h1>
<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan = "3"></th>
    </tr>
  </thead>
<% @users.each do |user| %>
  <tbody>
    <tr>
      <td><%= attachment_image_tag user, :profile_image, :fill, 40, 40, size: "40x40", fallback: "no-image.png", class: "image" %></td>

      <td><%= link_to user.name, user_path(user.id) %></td>
      <td>
      <%#byebug%>
      <%if current_user.follow?(user)%>
        <%= link_to "フォロー外す", user_relationships_path(user), method: :delete, class:"btn btn-sm btn-success"%>
      <%elsif current_user == user%>
      <%else%>
        <%= link_to "フォローする", user_relationships_path(user), method: :post, class:"btn btn-sm btn-success"%>
      <%end%>
      </td>
      <td><%= link_to 'Show', user_path(user.id) %></td>

    </tr>

   <%end%>
</table>
</div>
</div>
</div>