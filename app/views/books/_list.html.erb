 <% flash.each do |message_type, message| %>
      <%= message %>
 <% end %>


<h3>User info</h3>

<%= attachment_image_tag user, :profile_image, fallback: "no-image.png" ,class:"profile-image" %>

<p>name: <%= user.name %></p>
<p>introduction: <%= user.introduction %></p>

<% if user.id == current_user.id %>
<div class = "row">
<%= link_to "編集", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_27716" %>
</div>


<% else %>
<div class = "row">
<%= link_to "", user_path(current_user.id), class: " col-xs-12, btn btn-default, glyphicon, glyphicon-wrench " %>
</div>

<%end%>

<%= form_with model:book, local:true do |f| %>
<h3>New book</h3>

<div class = "field row">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>


<div class = "field row">
  <h4>Opinion</h4>
  <%= f.text_area :body %>
</div>


<div class = "actions row">
<%= f.submit 'Create Book' %>

</div>


<% end %>