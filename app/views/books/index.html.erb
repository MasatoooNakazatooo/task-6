<diV class = "container">

<div class = "row">
  <% if @book.errors.any? %>
  <div>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li>error</li>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <div class = "col-xs-3">

<%= render "books/list", user: @user, book: @book %>
  </div>


<div class = "col-xs-9">

<h1>Books</h1>
<table class = "table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book|%>
    <tr>

      <td><%= link_to user_path(book.user.id) do %><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, size: "40x40", fallback: "no-image.png", class: "image" %><% end %></td>

      <td><%= link_to book.title, book_path(book.id) %></td>

      <td class="likes_buttons_<%= book.id %>"><%= render "favorites/favorite", book: book %></td>

      <td>コメント数：<%= book.book_comments.count %></td>

    </tr>
  <%end%>
  </tbody>
</table>
</div>
</div>
